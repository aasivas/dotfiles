# EMACS all the way
export EDITOR="em"

# Highligh section titles in manual pages
export LESS_TERM_CAP_md="ORANGE"

# Larger bash history (allow 32Â³ entries; default is 500)
export HISTFILE=~/.histories/.bash_history
export HISTSIZE=32768
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
# Make some commands not show up in history
export HISTIGNORE="ls:ls *:cd:cd -:pwd;exit:date:* --help:la:ca:marco:polo"
