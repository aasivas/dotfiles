ORANGE="\033[0;33m"
BLUE="\033[0;34m"
PINK="\033[0;35m"
GREEN="\033[0;32m"
WHITE="\033[0m"

export ORANGE
export GREEN
export WHITE

function parse_git_branch {
  git branch --no-color 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}

PS1="${ORANGE}\t ${BLUE}\u@\h ${PINK}\W ${GREEN}\$(parse_git_branch) ${WHITE}$ "
PS2="> "
PS4="+ "
